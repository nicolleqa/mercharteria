@model mercharteria.Models.Personaje

@{
    ViewData["Title"] = "Crear Personaje";
    Layout = "_LayoutAdmin";
}

<!-- Bootstrap-->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">


<div class="container-fluid px-5 pb-5">
    <h2 class="mt-4 mb-3 text-dark">
        <i class="bi bi-plus-circle-fill me-2 text-primary"></i> Crear Personaje
    </h2>
    <div class="card shadow rounded-4">
            <div class="card-body px-5 py-4">

            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Imagen" />
                <input type="hidden" asp-for="BannerUrl" />

                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label">Nombre</label>
                    <input asp-for="Nombre" class="form-control" required />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ImagenFile" class="form-label">Imagen Principal</label>
                    <input asp-for="ImagenFile" type="file" class="form-control" accept="image/*" />
                    <small class="text-muted">Sube una imagen para el personaje</small>
                    <span asp-validation-for="ImagenFile" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="BannerFile" class="form-label">Imagen Banner</label>
                    <input asp-for="BannerFile" type="file" class="form-control" accept="image/*" />
                    <small class="text-muted">Sube una imagen para el banner</small>
                    <span asp-validation-for="BannerFile" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="SpotifyPlaylistId" class="form-label">ID Playlist de Spotify</label>
                    <input asp-for="SpotifyPlaylistId" class="form-control" />
                    <small class="text-muted">Ejemplo: 37i9dQZF1DX4SBhb3fqCJd</small>
                </div>

                <div>
                    <a asp-action="Admin" class="btn btn-secondary me-2">Cancelar</a>
                    <button type="submit" class="btn text-white" 
                            style="background-color: #050653; border-radius: 12px; padding: 8px 24px;">
                        Crear Personaje
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
}