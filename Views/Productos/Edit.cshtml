@model mercharteria.Models.Producto
@{
    ViewData["Title"] = "Editar Producto";
    Layout = "_LayoutAdmin";
}

<h2>Editar Producto</h2>

<div class="container-fluid" style="padding: 50px 60px;">
    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label">Nombre</label>
                    <input asp-for="Nombre" class="form-control" required />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Descripcion" class="form-label">Descripción</label>
                    <textarea asp-for="Descripcion" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Precio" class="form-label">Precio</label>
                    <input asp-for="Precio" type="number" step=".01" class="form-control" required />
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="CategoriaId" class="form-label">Categoría</label>
                    @Html.DropDownListFor(model => model.CategoriaId, ViewBag.CategoriaId as SelectList, "Seleccione una categoría", new { @class = "form-select", required = "required" })
                    <span asp-validation-for="CategoriaId" class="text-danger"></span>
                </div>
                @* <div class="mb-3">
                    <label asp-for="ImagenUrl" class="form-label">Imagen</label>
                    <input asp-for="ImagenUrl" type="file" class="form-control" accept="image/*" />
                    <span asp-validation-for="ImagenUrl" class="text-danger"></span>
                </div> *@
                <div class="mb-3">
                    <button  type="submit" class="btn text-white"  style="background-color: #050653; border-radius: 12px; padding: 8px 24px;">
                        Guardar Cambios
                    </button>
                    <a asp-action="Admin" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}