@model IEnumerable<mercharteria.Models.Producto>
@{
    ViewData["Title"] = "Productos";
}

<br><br><br><br><br><br>
<section id="productos">
    <center><h2>Nuestros Productos</h2></center>
    <div class="productos-container">
            @foreach (var item in Model)
            { 
            <div class="producto">
              <img src="@item.ImagenUrl" alt="@item.Nombre">
              <h5 class="card-title">@Html.DisplayFor(modelItem => item.Nombre)</h5>
              <p class="card-text">@Html.DisplayFor(modelItem => item.Precio)</p>

              <form asp-controller="Cart" asp-action="AddToCart" method="post">
                    <input type="hidden" name="productId" value="@item.Id" />
                    <a class="btn btn-primary" asp-controller="Carrito" asp-action="Add" asp-route-id="@item.Id">Agregar al carrito</a>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Ver</a>
              </form> 
            </div>
            }
    </div>
    <br><br>
</section>

