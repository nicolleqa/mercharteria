@model dynamic;
@using System.Collections.Generic;

@{
    ViewData["Title"] = "Carrito";
    IEnumerable<mercharteria.Models.PreOrden> listItemsCarrito = new List<PreOrden>();
    listItemsCarrito = @Model.elementosCarrito;
    Decimal montoTotal = @Model.montoTotal;
}

<div class="container" style="margin-top: 150px;">
    <h1 class="text-center mb-5">Mi Carrito de Compras</h1>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Producto</th>
                                <th>Cantidad</th>
                                <th>Precio</th>
                                <th>Subtotal</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (PreOrden item in Model.elementosCarrito) {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <img src="@item.Producto.ImagenUrl" style="width: 50px; height: 50px; object-fit: cover; border-radius: 8px;" class="me-3" />
                                            <span>@item.Producto.Nombre</span>
                                        </div>
                                    </td>
                                    <td>@item.Cantidad</td>
                                    <td>@item.Precio.ToString("C")</td>
                                    <td>@((item.Cantidad * item.Precio).ToString("C"))</td>
                                    <td>
                                        <div class="d-flex gap-2">
                                            <button type="button" 
                                                    class="btn btn-sm" 
                                                    style="color: #050653;"
                                                    data-bs-toggle="modal" 
                                                    data-bs-target="#editModal@(item.Id)">
                                                <i class="bi bi-pencil-fill"></i>
                                            </button>
                                            <a asp-controller="Carrito" 
                                            asp-action="Delete" 
                                            asp-route-id="@item.Id"
                                            class="btn btn-sm text-danger" 
                                            onclick="return confirm('¿Está seguro de eliminar este producto?')">
                                                <i class="bi bi-x-circle-fill"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-4">Resumen de compra</h5>
                    
                    <div class="d-flex justify-content-between mb-3">
                        <span>Subtotal:</span>
                        <span>@montoTotal.ToString("C")</span>
                    </div>
                    
                    <div class="d-flex justify-content-between mb-4">
                        <span class="fw-bold">Total:</span>
                        <span class="fw-bold">@montoTotal.ToString("C")</span>
                    </div>

                    <div class="mb-4">
                        <label class="form-label">Método de pago</label>
                        <select class="form-select">
                            <option>Tarjeta de crédito/débito</option>
                            <option>Yape</option>
                            <option>Plin</option>
                        </select>
                    </div>

                    <button class="btn w-100 text-white" 
                            style="background-color: #050653; border-radius: 12px; padding: 12px;"
                            asp-controller="Pago" 
                            asp-action="Create" 
                            asp-route-monto="@montoTotal">
                        Proceder al pago
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>



