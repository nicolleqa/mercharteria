@model mercharteria.Models.Orden

@{
    ViewData["Title"] = "Detalle de Orden";
    Layout = "_LayoutAdmin";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

<div class="container-fluid" style="padding: 50px 60px;">
    <div class="mb-4">
    <h1 class="h3">Detalle de Orden #@Model.Id</h1>
    <p><strong>Fecha:</strong> @Model.Fecha.ToString("dd/MM/yyyy HH:mm")</p>
    <p><strong>Total:</strong> @Model.Total.ToString("C")</p>
    <p><strong>Pagado:</strong> @(Model.EstaPagado ? "Sí" : "No")</p>
</div>


    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="mb-3">Productos Comprados</h5>
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Imagen</th>
                            <th>Producto</th>
                            <th>Precio</th>
                            <th>Cantidad</th>
                            <th>Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Detalles!)
                        {
                            <tr>
                                <td>
                                    <img src="@item.Producto?.ImagenUrl" alt="@item.Producto?.Nombre"
                                         style="width: 60px; height: 60px; object-fit: cover; border-radius: 8px;" />
                                </td>
                                <td>@item.Producto?.Nombre</td>
                                <td>S/ @item.Precio</td>
                                <td>@item.Cantidad</td>
                                <td>S/ @(item.Cantidad * item.Precio)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <a asp-action="Admin" class="btn mt-4 text-white"
       style="background-color: #050653; border-radius: 12px; padding: 8px 24px;">
        <i class="bi bi-arrow-left-circle me-1"></i> Volver a Órdenes
    </a>
</div>
