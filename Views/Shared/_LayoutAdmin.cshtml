<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin - Arteria</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        .sidebar {
            height: 100vh;
            width: 250px;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #050653;
            padding-top: 20px;
        }

        .sidebar-logo {
            padding: 20px;
            text-align: center;
            margin-bottom: 30px;
        }

        .sidebar-logo img {
            width: 120px;
            height: auto;
        }

        .sidebar-menu {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .sidebar-menu li a {
            display: flex;
            align-items: center;
            padding: 15px 20px;
            color: white;
            text-decoration: none;
            transition: background-color 0.3s;
        }

        .sidebar-menu li a:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }

        .sidebar-menu i {
            margin-right: 10px;
            font-size: 1.2em;
        }

        .main-content {
            margin-left: 250px;
            padding: 20px;
        }

        .bottom-menu {
            position: absolute;
            bottom: 0;
            width: 100%;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <div class="sidebar-logo">
            <img src="https://firebasestorage.googleapis.com/v0/b/merchanteria-f305c.firebasestorage.app/o/logo.png?alt=media&token=903acc6a-2a57-4106-bf7f-22cffb5561ae" alt="Arteria Merch"/>
        </div>
        
        <ul class="sidebar-menu">
            <li>
                <a href="~/Dashboard/Admin">
                    <i class="bi bi-speedometer2"></i> Dashboard
                </a>
            </li>
            <li>
                <a asp-controller="Admin" asp-action="Orders">
                    <i class="bi bi-cart"></i> Órdenes
                </a>
            </li>
            <li>
                <a href="~/Productos/Admin">
                    <i class="bi bi-box"></i> Productos
                </a>
            </li>
            <li>
                <a href="~/Categoria/Admin">
                    <i class="bi bi-tags"></i> Categorías
                </a>
            </li>
            <li>
                <a href="~/Contacto/Admin">
                    <i class="bi bi-people"></i> Contactos
                </a>
            </li>
        </ul>

        <ul class="sidebar-menu bottom-menu">
            <li>
                <a asp-controller="Admin" asp-action="Account">
                    <i class="bi bi-person"></i> Mi Cuenta
                </a>
            </li>
            <li>
                <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="btn w-100 text-start" style="color: white; padding: 15px 20px;">
                        <i class="bi bi-box-arrow-right"></i> Cerrar Sesión
                    </button>
                </form>
            </li>
        </ul>
    </div>

    <div class="main-content">
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>