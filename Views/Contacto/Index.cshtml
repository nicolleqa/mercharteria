@model mercharteria.Models.Contacto

@{
    ViewData["Title"] = "Contacto";
}

<div class="container" style="margin-top: 150px;">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mb-4">Cont√°ctanos</h2>
            
            <form asp-controller="Contacto" asp-action="EnviarMensaje" method="post">
                <div class="mb-4">
                    <label asp-for="Nombre" class="form-label">Nombre</label>
                    <input asp-for="Nombre" class="form-control" style="border-radius: 12px; border: 1px solid #050653;">
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" style="border-radius: 12px; border: 1px solid #050653;">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Mensaje" class="form-label">Mensaje</label>
                    <textarea asp-for="Mensaje" class="form-control" rows="5" style="border-radius: 12px; border: 1px solid #050653;"></textarea>
                    <span asp-validation-for="Mensaje" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn text-white px-5" 
                            style="background-color: #050653; border-radius: 12px; padding: 12px 30px;">
                        Enviar Mensaje
                    </button>
                </div>
            </form>

            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success mt-4 text-center">
                    @TempData["Message"]
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}