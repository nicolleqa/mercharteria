@model mercharteria.Models.DatosCliente

@{
    ViewData["Title"] = "Datos del Cliente";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container d-flex justify-content-center align-items-center" style="margin-top: 100px; min-height: 80vh;">
    <div class="card shadow-lg p-4" style="border-radius: 20px; max-width: 600px; width: 100%;">
        <h3 class="text-center mb-4" style="color: #050653;"><i class="bi bi-person-vcard-fill"></i> Información del Cliente</h3>

        <form asp-action="Create" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label class="form-label">Nombre completo</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                    <input asp-for="NombreCompleto" class="form-control" required />
                    <div class="invalid-feedback">Por favor, ingrese su nombre.</div>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Correo electrónico</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
                    <input asp-for="Correo" class="form-control" type="email" required />
                    <div class="invalid-feedback">Ingrese un correo válido.</div>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Dirección</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-geo-alt-fill"></i></span>
                    <input asp-for="Direccion" class="form-control" required />
                    <div class="invalid-feedback">La dirección es obligatoria.</div>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Referencia (opcional)</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-signpost-split-fill"></i></span>
                    <input asp-for="Referencia" class="form-control" />
                </div>
            </div>

            <input type="hidden" asp-for="Monto" />

            <button type="submit" class="btn text-white w-100" style="background-color: #050653; border-radius: 12px; padding: 12px;">
                <i class="bi bi-arrow-right-circle-fill"></i> Continuar con el pago
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        (() => {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
}