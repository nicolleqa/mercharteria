@model IEnumerable<mercharteria.Models.Categoria>

@{
    ViewData["Title"] = "Administración de Categorías";
    Layout = "_LayoutAdmin";
}

<div class="container-fluid" style="padding: 50px 60px;">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Categorías</h1>
        <a asp-action="Create" class="btn text-white" style="background-color: #050653; border-radius: 12px; padding: 8px 24px;">
            Crear Categoría
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Nombre</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Nombre</td>
                                <td>
                                    <div class="d-flex gap-2">
                                        <a asp-action="Edit" asp-route-id="@item.Id" 
                                        class="btn btn-sm" style="color: #050653;">
                                            <i class="bi bi-pencil-fill"></i>
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" 
                                            style="display: inline;"
                                            onsubmit="return confirm('¿Está seguro de eliminar esta categoría?')">
                                            <button type="submit" class="btn btn-sm text-danger">
                                                <i class="bi bi-trash-fill"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>